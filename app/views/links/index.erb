<h1> Bookmarks </h1>

<p>Welcome<%= current_user.username if current_user %>!</p>

<p><a href="/links/new">Add a new bookmark</a></p>

<ul id='links'>
  <% @bookmarks.each do |bookmark| %>
    <li>
      Title: <%= bookmark.title %>
      URL:   <%= bookmark.url   %>
      Tags:  <% bookmark.tags.each { |tag| %> <%= tag.name %><% } %>
    </li>
  <% end %>
</ul>